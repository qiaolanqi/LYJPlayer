<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.liyuejiao.player.VideoView
        android:id="@+id/videoView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <com.liyuejiao.player.MediaControllerSmall
        android:id="@+id/mediaControllerSmall"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.liyuejiao.player.MediaControllerLarge
        android:id="@+id/mediaControllerLarge"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.liyuejiao.player.MediaControllerMini
        android:id="@+id/mediaControllerMini"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>